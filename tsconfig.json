{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "outDir": "dist/",
        "rootDir": "src/",
        "sourceMap": true,
        "removeComments": false,

        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            "adal"
        ]
    },
    "exclude": [
        "node_modules",
        "gulp",
        "dist"
    ],
    "skipLibCheck": true,
    "angularCompilerOptions": {
        "strictMetadataEmit": true
    }
}
